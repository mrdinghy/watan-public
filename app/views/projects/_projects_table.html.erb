
<table id="allprojects" class="hover" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th>Name</th>
    <th>Institute</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @projects.each do |project| %>
      <tr>

        <td><%= link_to project.name, project %></td>
        <td>
          <%= image_tag project.institute.name %>

        </td>

      </tr>
  <% end %>
  </tbody>
</table>

<script>
    $(document).ready(function() {
        $('#allprojects').DataTable();
    } );
</script>