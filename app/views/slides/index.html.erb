<h1>Listing Slides</h1>

<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Institutes</th>
      <th>Transition</th>
      <th>Justify</th>
      <th>Imgalt</th>
      <th>Slotamount</th>
      <th>Logo</th>
      <th>Image file</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slides.each do |slide| %>
      <% myinstitutes= InstitutesSlide.where('slide_id=?', slide.id) %>
      <tr>







        <td> <%= image_tag slide.file.url, :width => "100", :class => "pull-left" %></td>



        <td><%= slide.title %></td>
        <td><%= slide.body %></td>
        <td>
          <% myinstitutes.each do |i| %>
            <%= i.institute.name %><br>
          <% end %>

        </td>
        <td><%= slide.transition %></td>
        <td><%= slide.justify %></td>
        <td><%= slide.imgalt %></td>
        <td><%= slide.slotamount %></td>
        <td><%= slide.logo %></td>
        <td><%= slide.file_file_name %></td>

        <td><%= link_to 'Show', slide %></td>
        <td><%= link_to 'Edit', edit_slide_path(slide) %></td>
        <td><%= link_to 'Destroy', slide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

