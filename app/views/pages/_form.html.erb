<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <div class="field">
      <label class="col-sm-2 control-label">Title:</label>
      <div class="col-sm-10">
        <%= f.text_field :title %>
      </div>
    </div>



    <div class="field">
      <label class="col-sm-2 control-label">Body Section 1:</label>
      <div class="col-sm-10">
        <%= f.text_area :body, :id => "pagebody" %>
      </div>
    </div>



    <div class="field">
      <label class="col-sm-2 control-label">Body Section 2:</label>
      <div class="col-sm-10">
        <%= f.text_area :body2, :id => "pagebody2" %>
      </div>
    </div>


    <div class="field">
      <label class="col-sm-2 control-label">Body Section 3:</label>
      <div class="col-sm-10">
        <%= f.text_area :body3, :id => "pagebody3" %>
      </div>
    </div>






    <div class="field">
      <%= f.label :pagelocation %><br>
      <%= f.text_field :pagelocation %>
    </div>



    <div class="actions">
    <%= f.submit class: "btn btn-small btn-primary" %>
  </div>
<% end %>






























