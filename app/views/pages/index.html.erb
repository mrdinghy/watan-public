
<div class="container">
  <p id="notice"><%= notice %></p>
  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Website Pages
        <small></small>
      </h1>


      <table class="table">
        <thead>
        <tr>
          <th>Title</th>


          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @pages.each do |page| %>
            <tr>
              <td><%= page.title %></td>
              <td><%= link_to 'Show', page %></td>
              <td><%= link_to 'Edit', edit_page_path(page) %></td>
              <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Page', new_page_path, :class => "btn btn-small btn-primary" %>


  </div>
</div>
    </div>


