<% @institutes=Institute.where('id <> 1') %>
<!-- main-container start -->
<!-- ================ -->
<section id="about" class="main-container">
  <div class="container">
    <div class="row">

      <!-- main start -->
      <!-- ================ -->
      <div class="main col-md-12">

        <!-- page-title start -->
        <!-- ================ -->
        <h2 class="page-title">Who We Are</h2>
        <div class="separator-2 mb-20"></div>
        <!-- page-title end -->

        <div class="row">
          <div class="col-md-8">

            <%= @aboutpage.body.html_safe if @aboutpage.body %>


          </div>

          <!-- sidebar start -->
          <!-- ================ -->
          <aside class="sidebar col-md-4">
            <div class="block clearfix">
              <h3>Watan Institutes</h3>
              <% @institutes.each do |i| %>
                  <div class="row" style="border-top: #000 1px solid">
                    <div class="col-md-4">
                      <%= image_tag i.logo.url, :width => "100", :class => "pull-left" %>

                    </div>
                    <div class="col-md-8">

                    <span style="font-size: 20px;"><%= link_to i.name, i %></span>


                    </div>

                  </div>
              <% end %>


            </div>
          </aside>
          <!-- sidebar end -->
        </div>






          </div>
      <!-- main end -->

    </div>
  </div>
</section>
<!-- main-container end -->