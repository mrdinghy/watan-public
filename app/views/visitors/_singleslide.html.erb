<!-- banner start -->
<!-- ================ -->
<div id="banner" class="banner clearfix">

  <!-- slideshow start -->
  <!-- ================ -->
  <div class="slideshow">

    <!-- slider revolution start -->
    <!-- ================ -->
    <div class="slider-revolution-5-container">
      <div id="slider-banner-fullscreen" class="slider-banner-fullscreen rev_slider" data-version="5.0">
        <ul class="slides">


              <li data-transition="fade" data-masterspeed="default" data-title="Simple and Smart Bootstrap Template">



                <!--  <li data-transition="boxfade" data-slotamount="7" data-masterspeed="default" data-title="Simple and Smart Bootstrap Template">-->

                <!-- main image -->
                <%= image_tag @slide.file.url, :class => "rev-slidebg", :data => { :bgposition => "center center", :bgrepeat => "no-repeat", :bgfit => "cover"}  %>

                <!-- <img src="images/corporate-4-slider-slide-2.jpg" alt="slidebg2" data-bgposition="center center" data-bgrepeat="no-repeat" data-bgfit="cover" class="rev-slidebg">-->

                <!-- Transparent Background -->
                <div class="tp-caption dark-translucent-bg"
                     data-x="center"
                     data-y="center"
                     data-start="0"
                     data-transform_idle="o:1;"
                     data-transform_in="o:0;s:600;e:Power2.easeInOut;"
                     data-transform_out="o:0;s:600;"
                     data-width="5000"
                     data-height="5000">
                </div>

                <!-- LAYER NR. 1 -->

                <div class="tp-caption large_white text-<%= @slide.justify %>"
                     data-x="<%= @slide.justify %>"
                     data-y="<%= @slide.logo_datay %>"
                     data-start="<%= @slide.logo_datastart %>"
                     data-transform_idle="o:1;"
                     data-transform_in="y:[100%];sX:1;sY:1;o:0;s:2000;e:Power4.easeInOut;"
                     data-transform_out="y:[100%];s:1000;e:Power2.easeInOut;"
                     data-mask_in="x:0px;y:[100%];s:inherit;e:inherit;"
                     data-mask_out="x:inherit;y:inherit;s:inherit;e:inherit;">
                  <%= image_tag("logo PNG_white.png", height: "50%", alt: "Edit Entry") %><br>



                </div>







                <div class="tp-caption large_white text-<%= @slide.justify %>"
                     data-x="<%= @slide.justify %>"
                     data-y="<%= @slide.title_datay %>"
                     data-start="<%= @slide.title_datastart %>"
                     data-transform_idle="o:1;"
                     data-transform_in="y:[100%];sX:1;sY:1;o:0;s:2000;e:Power4.easeInOut;"
                     data-transform_out="y:[100%];s:1000;e:Power2.easeInOut;"
                     data-mask_in="x:0px;y:[100%];s:inherit;e:inherit;"
                     data-mask_out="x:inherit;y:inherit;s:inherit;e:inherit;">
                  <%#= image_tag("logo PNG_white.png", height: "50%", alt: "Edit Entry") %> Social Development


                </div>
                <% linedatay= @slide.title_datay + 30 %>
                <!-- LAYER NR. 2 -->
                <div class="tp-caption large_white tp-resizeme"
                     data-x="<%= @slide.justify %>"
                     data-y="<%= linedatay %>"
                     data-start="750"
                     data-transform_idle="o:1;"
                     data-transform_in="o:0;s:2000;e:Power4.easeInOut;">
                  <div class="separator-3 light"></div>
                </div>

                <!-- LAYER NR. 3 -->
                <div class="tp-caption medium_white text-<%= @slide.justify %>"
                     data-x="<%= @slide.justify %>"
                     data-y="<%= @slide.text_datay %>"
                     data-start="<%= @slide.text_datastart %>"
                     data-transform_idle="o:1;"
                     data-transform_in="y:[100%];sX:1;sY:1;s:1750;e:Power4.easeInOut;"
                     data-transform_out="y:[100%];s:1000;e:Power2.easeInOut;"
                     data-mask_in="x:0px;y:0px;s:inherit;e:inherit;"
                     data-mask_out="x:inherit;y:inherit;s:inherit;e:inherit;">
                  We strive to develop individuals and society through a group of <br>civil society institutions run by specialized personnel. <br>
                  We aim to establish our presence throughout Syria, in all its provinces, and <br>wherever Syrian communities exist. We focus on nation building and developmental projects.<br><br>

                  <%= link_to 'Learn More', slide_path(@slide), :class => "btn btn-gray radius-50 btn-lg btn-animated margin-clear" %> <i class="fa fa-info-circle"></i></a> <span class="pl-5 pr-5">or</span> <a href="page-contact.html" class="btn btn-default btn-lg radius-50 btn-animated margin-clear">Contact Us <i class="fa fa-envelope"></i></a>

                </div>

                <!-- LAYER NR. 4 -->
                <div class="tp-caption small_white"
                     data-x="<%= @slide.justify %>"
                     data-y="410"
                     data-start="1100"
                     data-transform_idle="o:1;"
                     data-transform_in="y:[100%];sX:1;sY:1;o:0;s:1500;e:Power4.easeInOut;"
                     data-transform_out="y:[100%];s:1000;e:Power2.easeInOut;"
                     data-mask_in="x:0px;y:[100%];s:inherit;e:inherit;"
                     data-mask_out="x:inherit;y:inherit;s:inherit;e:inherit;">

                </div>

                <!-- LAYER NR. 5 -->
                <div class="tp-caption"
                     data-x="center"
                     data-y="bottom"
                     data-voffset="100"
                     data-start="1250"
                     data-transform_idle="o:1;"
                     data-transform_in="y:[100%];sX:1;sY:1;o:0;s:2000;e:Power4.easeInOut;"
                     data-transform_out="y:[100%];s:1000;e:Power2.easeInOut;"
                     data-mask_in="x:0px;y:[100%];s:inherit;e:inherit;"
                     data-mask_out="x:inherit;y:inherit;s:inherit;e:inherit;">

                  <a href="#page-start" class="btn btn-lg moving smooth-scroll"><i class="icon-down-open-big"></i><i class="icon-down-open-big"></i><i class="icon-down-open-big"></i></a>
                </div>








              </li>
              <!-- slide 2 end -->







        </ul>
      </div>
    </div>
    <!-- slider revolution end -->

  </div>
  <!-- slideshow end -->

</div>
<!-- banner end -->