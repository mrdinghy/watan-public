








<%= form_for @site_image do |f| %>
  <% if @site_image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site_image.errors.count, "error") %> prohibited this site_image from being saved:</h2>

      <ul>
      <% @site_image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-horizontal">


    <div class="row">


      <div class="form-group">
        <%= f.label "Image Name", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label "Caption", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :caption, class: "form-control" %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label "Source", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :image_source, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Image", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= image_tag @site_image.image.url, :width => "100", :class => "pull-left" %>
        </div>
      </div>




      <div class="form-group">
          <%= f.label 'Replace', :class => "col-sm-2 control-label" %>
          <div class="col-sm-4">
            <%= f.file_field :image, :class => "form-control" %>
          </div>
        </div>




    </div>


  <div class="actions pull-right">
    <%= f.submit class: "btn btn-primary" %>
  </div>

    </div>
<% end %>
