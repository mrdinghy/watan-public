<table id="example" class="hover" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th>Title</th>
    <th>Title</th>
    <th>Type</th>
    <th>Value</th>

    <th>Publish Date</th>

    <!--<th colspan="3"></th>-->
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>

        <td> <%= image_tag post.image.url, :width => "100", :class => "pull-left" %></td>
        <td><%= link_to post.title, post %></td>

        <td><%= post.post_type_humanize %></td>
        <td><%= post.post_value %></td>

        <td><%= post.published_at %></td>

        <!--<td><%#= link_to 'Show', post %></td>
        <td><%#= link_to 'Edit', edit_post_path(post) %></td>
        <td><%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
      </tr>
  <% end %>
  </tbody>
</table>
