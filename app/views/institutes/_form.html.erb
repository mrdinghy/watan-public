<%= form_for @institute, :class => "form-horizontal", html: { multipart: true } do |f| %>


  <% if @institute.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@institute.errors.count, "error") %> prohibited this institute from being saved:</h2>

      <ul>
      <% @institute.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



    <div class="form-group">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "sectionname" %>
      </div>
    </div>


    <div class="form-group">
      <label class="col-sm-2 control-label">Description</label>
      <div class="col-sm-10">

        <%= f.text_area :description, :id => "institutebody", :cols => "100", :rows => "15" %> %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label 'Current Logo', :class => "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= image_tag @institute.logo.url, :width => "100%", :class => "pull-left" %>

      </div>
      <%= f.label 'Replace', :class => "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.file_field :logo, :class => "form-control" %>
      </div>
    </div>



    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-10">

        <%= f.submit :class => "btn btn-small btn-primary" %>
      </div>
    </div>


<% end %>


<script>

    $(function() {
        $('#institutebody').froalaEditor()
    });
</script>